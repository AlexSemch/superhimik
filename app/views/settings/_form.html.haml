= simple_form_for(@setting,:url => settings_path, html: {class: 'form-horizontal' }) do |f|
	= f.input :system_name
	= f.input :nav_year
	= f.input :footer
	= f.input :about_as, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } 
	= f.input :contact_as, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} }
	= f.button :submit