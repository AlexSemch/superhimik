= simple_form_for(@theory, html: {class: 'form-inline' }) do |f|
  = f.error_notification

  .form-inputs.text-center
    = f.association :topic, label_method: :content, value_method: :id, label: false, prompt: I18n.t(:choose_topic)
    = f.input :name, label: false, input_html: { size: 120 }
    = f.input :theory_text, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} }

  .form-actions.text-center
    = f.button :submit, I18n.t(:save), class: 'btn btn-default btn-large'
